@model RazorPagesTutorial.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<form method="post">
    <select asp-for="@Model.SelectedId" class="form-control">

        @foreach (var item in Model.Products)
        {
            <option value=@item.ID>@item.P_Name</option>
        }



    </select>
    
        <a class="btn btn-large btn-info" asp-page="/Products/Details" asp-route-ID="@Model.SelectedId">Submit</a>
    
</form>

@if (Model.SelectedId != 0)
{
    <h1>@Model.SelectedId</h1>
}
